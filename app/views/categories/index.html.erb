<% if user_signed_in? && current_user.admin? %>
  <%= render("shared/topnav") %>

<div class="container d-flex align-items-center justify-content-center">
  <div class="row">
    <div class="col-md-12">
      <h3>Categories Section</h3>
      <button class="btn btn-default btn-lg gapp"><%= link_to "Add category", new_category_path %></button>
      <table class="table table-striped table-dark" id ="bt">
        <thead>
          <tr>
            <th>Name of the Category</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.name, edit_category_path(category) %></td>
            <td>
              <%= link_to("Delete", category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger bt") %>
            </td> 
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% else %>
  <h3>Sign in with an admin account</h3>
<% end %>