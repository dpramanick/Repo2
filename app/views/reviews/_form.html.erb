<%= simple_form_for([@product, @product.reviews.build]) do |f| %>
<div class="form-group">
  <div class="mar">
    <%#= f.input :rating %>
    <%= f.label :rating %>
    <%= f.select :rating,[1,2,3,4,5],class:"form-control me-2" %>
  </div>
  
  <div class="mar">
    <%= f.label :comment %>
    <%= f.text_area :comment, class:"form-control", input_html: { autocomplete: "comment"} %>
  </div>
  <%= f.button :submit %>
</div>
<% end %>

<%= link_to "Back", 'javascript:history.back()', class: "btn btn-outline-secondary" %>