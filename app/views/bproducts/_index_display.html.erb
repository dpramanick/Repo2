<% @bproducts.each do |bproduct| %>
    <% if bproduct.is_approved == true %>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <%= image_tag bproduct.picture if bproduct.picture.attached? %>
                <div class="caption">
                    <h3><%= bproduct.name %></h3>
                    <h3><%= bproduct.is_approved %></h3>
                    <div class="condition-container">
                        <%= link_to("View Product", product_path(bproduct), class: "btn btn-default") %>
                        <%= bproduct.condition.name %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
<% end %>