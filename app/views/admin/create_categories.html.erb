<%= render("shared/topnav") %>

<div class="container d-flex align-items-center justify-content-center">
  <div>
    <h3 >Categories Section</h3>

    <button class="btn btn-default btn-lg gapp"><%= link_to "Add category", new_category_path %></button>

    <ul class="list-group">
      <% @categories.each do |category| %>
      <li class="list-group-item"><%= link_to category.name, edit_category_path(category) %></li>
      <% end %>
    </ul>
  </div>
</div>