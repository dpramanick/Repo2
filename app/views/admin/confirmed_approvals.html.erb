<%= render("shared/topnav") %>
<% if user_signed_in? && current_user.admin? %>
    <div class="row">
            <div class="col-md-12 my-5 border rounded shadow">
            <h3 class="my-4 text-center">Confirmed Products</h3>
            <table class="table table-striped">
                <thead>
                <tr>    
                    <th>Name</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Seller</th> 
                </tr>
                </thead>

                <tbody>
                <% @products.each do |product| %>
                    <tr>
                    <td><%= product.name %></td>
                    <td><%= product.location %></td>
                    <td><%= product.price %></td>
                    <td><%= product.user.name %></td>               
                    </tr>
                <% end %>
                </tbody>

                <thead>
                <tr>    
                    <th>Name</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Buyer</th> 
                </tr>
                </thead>

                <tbody>
                <% @bproducts.each do |bproduct| %>
                    <tr>
                    <td><%= bproduct.name %></td>
                    <td><%= bproduct.location %></td>
                    <td><%= bproduct.price %></td>
                    <td><%= bproduct.user.name %></td>               
                    </tr>
                <% end %>
                </tbody>
            </table>       
            </div>       
    </div>
<% else %>
  <h3>Sign in with an admin account</h3>


<% end %>