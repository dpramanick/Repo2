<div class="row">
  <h3>Current Listings</h3>
  <% @account.products.each do |product| %>
    <div class="col-sm-6 col-md-4 listing-box">
      <div class="thumbnail account-card">
      <% if product.picture.attached? %>
        <%= image_tag((product.picture), class: "account-img")%>
      <% else %>
        <h5>No image attached</h5>
      <% end %>
        <div class="caption">
          <h3><%= product.name %></h3>
          <h5>Price: <%= number_to_currency(product.price) %></h5>
          <h5>Condition: <%= product.condition.name %></h5>
          <div class="account-button-container">
            <%= link_to("View", product_path(product), class: "btn btn-default") %>
            <%= link_to("Edit", edit_product_path(product), class: "btn btn-default") %>
            <%= link_to("Delete", delete_product_path(product), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default") %>
          </div> 
        </div>
      </div>
    </div>
  <% end %>
</div>